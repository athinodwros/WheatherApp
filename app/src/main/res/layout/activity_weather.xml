<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.athensgift.wheatherapp.WeatherActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        map:cameraTargetLat="-33.796923"
        map:cameraTargetLng="150.922433"
        map:cameraZoom="7"
        map:uiCompass="false"
        map:uiZoomControls="false"
        map:uiZoomGestures="false"
        map:uiScrollGestures="false"
        map:uiTiltGestures="false"
        tools:layout="@android:layout/simple_spinner_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/map">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/weathers_title"
            android:textSize="16dp"
            android:textAlignment="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weathers_title"
            android:layout_marginTop="10dp"
            android:id="@+id/weathers_wind"
            android:textSize="13sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weathers_wind"
            android:layout_marginTop="10dp"
            android:id="@+id/weathers_atmosphere"
            android:textSize="13sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weathers_atmosphere"
            android:layout_marginTop="10dp"
            android:id="@+id/weathers_astronomy"
            android:textSize="13sp" />
        <TextView
            android:text="@string/weathers_condition_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weathers_astronomy"
            android:layout_marginTop="20dp"
            android:id="@+id/weathers_now_label"
            android:visibility="gone"
            android:textSize="15sp"
            android:textAlignment="center"/>

        <RelativeLayout
            android:id="@+id/weathers_now_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weathers_now_label">

            <ImageView
                android:id="@+id/weather_day_list_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerInside"
                tools:src="@mipmap/ic_launcher"
                android:contentDescription="@string/details"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp" />

            <TextView
                android:id="@+id/weather_day_list_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:maxLines="1"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:paddingRight="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="4dp" />

            <RelativeLayout
                android:id="@+id/weather_day_list_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/weather_day_list_detail"
                android:layout_toEndOf="@id/weather_day_list_thumbnail"
                android:layout_toLeftOf="@id/weather_day_list_detail"
                android:layout_toRightOf="@id/weather_day_list_thumbnail">

                <TextView
                    android:id="@+id/weather_day_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/weather_day_list_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weather_day_list_title"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textSize="16sp"
                    />

            </RelativeLayout>



        </RelativeLayout>

        <Button
            android:id="@+id/daily_weather_forecast_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/daily_weather_forecast"
            android:layout_below="@id/weathers_now_layout"
            android:visibility="invisible"
            android:onClick="showDailyForecast"/>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:translationZ="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listErrorMessage"
            android:textAlignment="center"
            android:textSize="18dp"
            android:text="@string/no_response_for_this_coordinates"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>
